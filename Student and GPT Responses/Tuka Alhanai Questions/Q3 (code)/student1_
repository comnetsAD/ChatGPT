#include <iostream>
using namespace std;
 
class Drink {
 
public:
 
	int volume;
 
	// constructor
	Drink(int v) {
 
    	// variable private to the function
    	volume = v;
    	cout << "Volume: " << volume << "\n";
 
	}
 
};
 
 
int main() {
 
	// creating object
	Drink mydrink(12);
 
	// Create object with dynamic memory allocation
 
	// ... solution here ...
 
	Drink* newdrink = new Drink(40);
	delete newdrink;
	return 0;
 
}

